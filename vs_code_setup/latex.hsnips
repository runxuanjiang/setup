# Constructs

snippet item
\begin{itemize}
    \item $1
\end{itemize}

endsnippet

snippet enum
\begin{enumerate}
    \item $1
\end{enumerate}

endsnippet

context math(context)
snippet \{ Ai
\{$1\\}
endsnippet

context math(context)
snippet <> Ai
\langle $1 \rangle
endsnippet

context math(context)
snippet `vec([1-9])` Ai

\begin{bmatrix}
``
rows = parseInt(m[1]);
for (let i = 0; i < rows; ++i) {
    rv += "\t";
    rv += `${snip.tabstop(i+1)} \\\\\\ \n`;
}
``
\end{bmatrix}
endsnippet

context math(context)
snippet `mat([1-9])([1-9])` Ai

\begin{bmatrix}
``
rows = parseInt(m[1]);
cols = parseInt(m[2]);
for (let i = 0; i < rows; ++i) {
    rv += "\t";
    for (let j = 0; j+1 < cols; ++j) {
        rv += `${snip.tabstop(i * cols + j + 1)} & `;
    }
    rv += `${snip.tabstop(i * cols + cols)} \\\\\\ \n`;
}
``
\end{bmatrix}
endsnippet

