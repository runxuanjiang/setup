# Greek Letters

context math(context)
snippet `;([a-zA-Z])` Aw
``
gmap = {
    "a": "\\alpha",
    "b": "\\beta",
    "G": "\\Gamma",
    "g": "\\gamma",
    "D": "\\Delta",
    "d": "\\delta",
    "e": "\\epsilon",
    "z": "\\zeta",
    "h": "\\eta",
    "Q": "\\Theta",
    "q": "\\theta",
    "i": "\\iota",
    "k": "\\kappa",
    "L": "\\Lambda",
    "l": "\\lambda",
    "m": "\\mu",
    "n": "\\nu",
    "X": "\\Xi",
    "x": "\\xi",
    "P": "\\Pi",
    "p": "\\pi",
    "r": "\\rho",
    "S": "\\Sigma",
    "s": "\\sigma",
    "t": "\\tau",
    "u": "\\upsilon",
    "F": "\\Phi",
    "f": "\\phi",
    "c": "\\chi",
    "Y": "\\Psi",
    "y": "\\psi",
    "O": "\\Omega",
    "o": "\\omega",
}
rv = (gmap[m[1]] || m[0])
``
endsnippet

